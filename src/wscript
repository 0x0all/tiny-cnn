import sys
def build(bld):
    if sys.platform == 'Darwin':
      libcxx = 'c++'
    else:
      libcxx = 'stdc++'
    
    bld(features = 'cxx cprogram',
      source = 'main.cpp',
      target = 'main',
      cflags   = ['-Wall'],
      cxxflags = ['-std=c++0x', '-Wall', '-s', '-Ofast', '--march=native'],
      lib      = [libcxx, 'boost_time', 'tbb'],
      libpath  = ['../'],
      includes = ['.', '../include', bld.env.BOOST_ROOT, bld.env.TBB_ROOT])
